<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:onClick="onClickBor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/bor" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Борисоглебск"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:onClick="mos"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/msc" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Москва"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:onClick="voro"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/vor" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Воронеж"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView55"
                android:layout_width="20dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/sar" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:onClick="saratov"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Саратов"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:onClick="volgograd"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView445"
                android:layout_width="20dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/vol" />

            <TextView
                android:id="@+id/textView632"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Волгоград"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:onClick="tambov"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4234"
                android:layout_width="20dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/tamb" />

            <TextView
                android:id="@+id/textView6324"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Тамбов"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Выберите город"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>